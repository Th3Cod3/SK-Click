<form>
	<div class="row">
		<div class="col-12">
			<div class="form-group">
				<label for="name">
					<h5>Event name</h5>
				</label>
				<input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
			</div>
		</div>

		<div class="col-12">
			<div class="form-group">
				<label for="venue">
					<h5>Venue</h5>
				</label>
				<input type="text" class="form-control" id="venue" name="venue" placeholder="Venue" required>
			</div>
		</div>

		<div class="col-sm-12 col-md-6">
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="usb" name="usb" value="1">
				<label class="custom-control-label" for="usb">Include USB</label>
			</div>
		</div>

		<div class="col-sm-12 col-md-6">
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="printing" name="printing" value="1">
				<label class="custom-control-label" for="printing">Include unlimited printing</label>
			</div>
		</div>

		<div class="col-12">
			<div class="form-group">
				<label for="from_date">
					<h5>From</h5>
				</label>
				<input type="datetime-local" class="form-control" id="from_date" name="from_date" value="{{ "now" | date("Y-m-d\\TH:i")}}" required>
			</div>
		</div>

		<div class="col-12">
			<div class="form-group">
				<label for="to_date">
					<h5>To</h5>
				</label>
				<input type="datetime-local" class="form-control" id="to_date" name="to_date" value="{{ "now +2 hour" | date("Y-m-d\\TH:i")}}" required>
			</div>
		</div>

		<input type="hidden" name="division_id" value="{{ division_id }}">

		<div class="col-12">
			<button type="submit" class="btn btn-block btn-success">SAVE</button>
		</div>
	</div>
</form>
